---
pageable: true
per_page: 10
---
<%= partial 'layouts/pagination_heading' %>
<% page_articles.each_with_index do |article, i| %>
<h2><%= link_to article.title, article %> <time datetime="<%= article.date.strftime('%F') %>"><%= prettify_date(article.date) %></time></h2>
<!-- use article.summary(250) if you have Nokogiri available to show just the first 250 characters -->
<%= article.body %>
<% end %>
<%= partial 'layouts/pagination_links' %>