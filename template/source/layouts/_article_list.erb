<ol>
	<% page_articles.each_with_index do |article, i| %>
	<li typeof="dcmitype:Text" resource="<%= absolute_url(article) %>">
		<h2 property="dcterms:title"><%= article.title %></h2>
		<p><time datetime="<%= article.date.strftime('%F') %>"><%= prettify_date(article.date) %></time></p>
		<p property="dcterms:description"><%= article.data.description %></p>
		<p>Continue reading <%= link_to article.title, article, property: 'dcterms:isPartOf ' %></p>
		<link property="rdfa:copy" href="#nav_footer" />
	</li>
	<% end %>
</ol>
<%= partial 'layouts/pagination' %>